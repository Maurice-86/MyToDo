<UserControl
    x:Class="MyToDo.Views.Settings.SkinView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyToDo.Views.Settings"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            FontSize="32"
            FontWeight="Bold"
            Text="个性化" />
        <StackPanel
            Grid.Row="1"
            Margin="12,16"
            VerticalAlignment="Top"
            Orientation="Horizontal">
            <TextBlock VerticalAlignment="Center" Text="浅色" />
            <ToggleButton Margin="12,0" IsChecked="{Binding IsDarkTheme}"/>
            <TextBlock VerticalAlignment="Center" Text="深色" />
        </StackPanel>
    </Grid>
</UserControl>
